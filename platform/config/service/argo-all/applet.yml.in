apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
    name: applet
    labels:
        app: applet
        tier: platform
        role: axcritical
spec:
    template:
        metadata:
            labels:
                app: applet
                tier: platform
                role: axcritical
            annotations:
                pod.alpha.kubernetes.io/init-containers: '[
                    {
                        "name": "pre",
                        "image": "${REGISTRY}/${NAMESPACE}/kube-init:${VERSION}",
                        "command": ["timeout", "1200", "sh", "-c", "wait_http http://axartifactmanager.axsys:9892/v1/ping http://axdb.axsys:8083/v1/axdb/version"]
                    }
                ]'
                scheduler.alpha.kubernetes.io/critical-pod: ''
                scheduler.alpha.kubernetes.io/tolerations: '[{"key":"CriticalAddonsOnly", "operator":"Exists"}]'
        spec:
            containers:
              - name: applet-main
                image: ${REGISTRY}/${NAMESPACE}/applet:${VERSION}
                env:
                   - name: ARGO_DATA_BUCKET_NAME
                     value: "${ARGO_DATA_BUCKET_NAME}"
                   - name: LOGMOUNT_PATH
                     value: /logs
                volumeMounts:
                   - name: handshake-socket
                     mountPath: /var/run
                   - name: database
                     mountPath: /ax/applet
                   - name: container-logs
                     mountPath: /logs
                resources:
                    requests:
                        cpu: 50m
                        memory: 200Mi
                    limits:
                        cpu: 150m
                        memory: 600Mi
            imagePullSecrets:
                - name: applatix-registry
            volumes:
              - name: handshake-socket
                hostPath:
                    path: /var/run
              - name: database
                hostPath:
                    path: /ax/applet
              - name: container-logs
                hostPath:
                    path: /var/lib/docker/containers
